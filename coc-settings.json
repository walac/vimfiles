{
  "go.enable": true,
  "python.linting.pylintArgs": [
    "-d",
    "C0112,C0403,C0115,C0116,C0114,C0402,C0103"
  ],
  "clangd.fallbackFlags": [
    "-std=c++17"
  ],
  "clangd.arguments": [
    "--log=error",
    "--header-insertion=iwyu",
    "--completion-style=detailed",
    "--background-index",
    "--clang-tidy"
  ],
  "clangd.semanticHighlighting": true,
  "python.formatting.provider": "yapf"
}
